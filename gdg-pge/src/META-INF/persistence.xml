<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="gdg-pge" transaction-type="RESOURCE_LOCAL">
		<class>gov.gdg.modelo.Usuario</class>
		<class>gov.gdg.modelo.Avaliacao</class>
		<class>gov.gdg.modelo.Questao</class>
		<class>gov.gdg.modelo.Alternativa</class>
		<class>gov.gdg.modelo.AvaliacaoUsuario</class>
		<class>gov.gdg.modelo.Grupo</class>
		<class>gov.gdg.modelo.Meta</class>
		<class>gov.gdg.modelo.Diretoria</class> 
		<class>gov.gdg.modelo.Resultado</class>
		<class>gov.gdg.modelo.GrupoUsuario</class>
		<class>gov.gdg.modelo.AvaliacaoAlternativa</class><properties>
		
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gdg" />
			<property name="javax.persistence.jdbc.user" value='postgres' />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.ssl" value="true" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
		</properties>
	</persistence-unit>
</persistence>
